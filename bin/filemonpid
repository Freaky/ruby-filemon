#!/usr/bin/env ruby

require "bundler/setup"
require "filemon"

trap(:INT)  { exit 1 }
trap(:TERM) { exit 1 }

pids = ARGV.map {|pid| Integer(pid) }
mons = pids.map {|pid| Filemon::Device.new(fd: STDERR, pid: pid) }

while pids.any?
  pids.keep_if do |pid|
    Process.kill(0, pid) rescue false
  end
  sleep 0.1
end

